/* pages/detailText/detailText.wxss */
.detail .title {
  font-size: 50rpx;
  line-height: 1.5em;
  padding: 15rpx 30rpx;
}

.detail .title .share {
  position: absolute;
  top: 0;
  left: 0;
  opacity: 0;
}

.detail .info {
  font-size: 28rpx;
  color: var(--desColor);
  padding: 10rpx 20rpx 0 30rpx;
  margin-bottom: 15rpx;
}

.detail .info .info-row {
  line-height: 22rpx;
}

.detail .info .info-text-1 {
  text-align: justify;
}

.detail .info .info-text-1::after {
  width: 100%;
  display: inline-block;
  content: '';
}

.detail .content {
  height: calc(100vh - 180rpx - 150rpx - 400rpx - var(--bottom-height--));
  overflow: hidden;
}

.detail .content .text-title {
  width: 100%;
  color: var(--focusColor);
  font-size: 40rpx;
  padding: 20rpx 0rpx 0rpx 50rpx;
}

.detail .content .text-content {
  width: 100%;
  height: fit-content;
  text-align: justify;
}

.detail .content .text-content::after {
  width: 100%;
  display: inline-block;
  content: '';
}

.detail .review {
  height: 400rpx;
  background-color: #888;
  margin-top: 3rpx;
}

.detail .review .write-part {
  height: 100%;
}

.detail .review .write-part .van-tabs__scroll--card {
  margin: 0  !important;
  width: 100%;
}

.detail .copyright {
  margin-top: 30rpx;
  background: var(--globalBgColor2);
  padding: 30rpx;
  font-size: 26rpx;
  color: #888;
}

.detail .copyright .top {
  font-size: 30rpx;
  padding-bottom: 15rpx;
}
